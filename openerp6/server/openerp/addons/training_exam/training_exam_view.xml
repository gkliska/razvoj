                        </group>
                    </field>
                    <field name="price_list_id" position="attributes">
                        <attribute name="on_change">on_change_price_list(session_id, price_list_id, course_id)</attribute>
                    </field>
                </data>
            </field>
        </record>
        
        <record model="ir.ui.view" id="subscription_line_tree_inherited">
