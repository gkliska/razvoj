                    <notebook colspan="4">
                        <page string="Responses" attrs="{'invisible':[('type_question_id', '!=', 'qcm'),('type_question_id', '!=', 'qcu')]}">
                            <separator string="The response(s) from the question" colspan="4"/>
                            <field name="qcm_question_id" colspan="4" nolabel="1" />
