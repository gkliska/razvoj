            <field name="type">tree</field>
            <field name="inherit_id" ref="training.training_subscription_line_tree2" />
            <field name="arch" type="xml">
                <field name="session_id" position="after">
                    <field name="course_id" select="1" /> <!--link="0"-->
                </field>
            </field>
