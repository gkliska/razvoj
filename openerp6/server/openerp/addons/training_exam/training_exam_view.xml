                            <field name="response_qcm_ids" colspan="4" nolabel="1" />
                        </page>
                        <page string="Responses" attrs="{'invisible' : [('type_question_id', '!=', 'yesno')]}">
                            <separator string="The response(s) from the question" colspan="4"/>
                            <field name="yesno_question_id" />
                            <separator string="The response(s) from the student" colspan="4"/>
                            <field name="response_yesno" />
                        </page>
                        <page string="Responses" attrs="{'invisible' : [('type_question_id', '!=', 'plain')]}">
                            <separator string="The response(s) from the question" colspan="4"/>
                            <field name="plain_question_id" nolabel="1" />
                            <separator string="The response(s) from the student" colspan="4"/>
                            <field name="response_plain" nolabel="1" />
                        </page>
                        <page string="Notes">
                            <field name="note" nolabel="1" colspan="4" />
                        </page>
                    </notebook>
                </form>
            </field>
