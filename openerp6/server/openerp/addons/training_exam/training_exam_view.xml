                                <field name="name" />
                                <field name="kind" />
                                <field name="state" />
                                <field name="len_question_ids" string="Number of Questions" />
                            </tree>
                            <form string="Questionnaire">
                                <field name="name" readonly="1" />
                                <field name="state" readonly="1" />
                                <field name="kind" readonly="1" />
                            </form>
                        </field>
                    </page>
